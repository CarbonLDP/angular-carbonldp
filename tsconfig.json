{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"noImplicitAny": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [ "es2015", "dom" ],
		"outDir": "dist",
		"declaration": true,
		"moduleResolution": "node"
	},
	"exclude": [
		"dist",
		"node_modules"
	],
	"angularCompilerOptions": {
		"genDir": "compiled",
		"skipTemplateCodegen": true
	}
}
